{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@controller/*": ["./controller"],
      "@model/*": ["./model"],
      "@middleware/*": ["./middleware"],
      "@utils/*": ["./utils"]
    },
    "outDir": "./dist"
  }
}
